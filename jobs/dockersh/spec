---
name: dockersh

templates:
  dockersh: bin/dockersh
  pre-start: bin/pre-start
  post-start: bin/post-start
  envs: config/envs

packages: []

properties:
  container:
    description: The docker container you want to use
    default: busybox
  command:
    description: The command you want to execute when you run the container like /bin/bash
    default: /bin/ash
  user:
    description: User to use inside the container
    default: root
  workdir:
    description: Initial workdir inside the container
    default: /
  docker_envs:
    description: set an array of variables specifed as 'FOO=BAR'
